---
import "../styles/global.css";

import Welcome from '../components/Welcome.astro';
import Layout from '../layouts/Layout.astro';
import events from '../data/events.json';

// Imagen de referencia (subida)
// /mnt/data/2b540857-4019-49b9-9eba-a821c2fe6c38.png

// Calcular días en noviembre (1–30)
const days = Array.from({ length: 30 }, (_, i) => i + 1);

// Calcular posición y duración del evento recortando al mes mostrado (noviembre)
function getEventPosition(startIso: string, endIso: string) {
  const displayYear = new Date().getFullYear();
  const displayMonth = 10; // noviembre (0-indexed)

  const monthStart = new Date(displayYear, displayMonth, 1, 0, 0, 0, 0);
  const monthEnd = new Date(displayYear, displayMonth, 30, 23, 59, 59, 999);

  const start = new Date(startIso);
  const end = new Date(endIso);

  const overlapStart = start > monthStart ? start : monthStart;
  const overlapEnd = end < monthEnd ? end : monthEnd;

  if (overlapStart > overlapEnd) return null;

  const s = new Date(overlapStart.getFullYear(), overlapStart.getMonth(), overlapStart.getDate());
  const e = new Date(overlapEnd.getFullYear(), overlapEnd.getMonth(), overlapEnd.getDate());

  const spanDays = Math.floor((+e - +s) / (24 * 60 * 60 * 1000)) + 1;
  const startDay = s.getDate();

  return { startDay, span: spanDays, endDay: startDay + spanDays - 1 };
}

// Preparar lista de eventos con posición y columna (0..2)
// Ahora con asignación global que considera eventos que vienen de antes y mantiene columna para spans multi-día
const preparedEvents = (() => {
  const positions: any[] = events
    .map(event => {
      const pos = getEventPosition(event.start, event.end);
      if (!pos) return null;
      return { ...event, ...pos };
    })
    .filter(Boolean);

  // Agrupar por startDay para decidir colSpan deseado (1 evento -> 1col, 2 -> 2+1, 3 -> 1+1+1, 4+ -> 1-1-1)
  const groups: Record<string, any[]> = {};
  positions.forEach(ev => {
    const d = String(ev.startDay);
    if (!groups[d]) groups[d] = [];
    groups[d].push(ev);
  });

  // Decidir colSpan deseado por evento
  const desiredMap = new Map<any, number>(); // event -> desired colSpan
  Object.keys(groups).forEach(day => {
    const group = groups[day];
    // ordenar por duración descendente
    group.sort((a, b) => b.span - a.span);

    if (group.length === 1) {
      desiredMap.set(group[0], 1);
    } else if (group.length === 2) {
      // el más largo toma 2, el otro 1
      desiredMap.set(group[0], 2);
      desiredMap.set(group[1], 1);
    } else if (group.length === 3) {
      group.forEach(ev => desiredMap.set(ev, 1));
    } else {
      // 4 o más: todos 1 (visualmente se comportan como 3 columnas y solapan)
      group.forEach(ev => desiredMap.set(ev, 1));
    }
  });

  // Matriz de ocupación: días 1..30 -> índice 1..30 (usamos 1-based para claridad), columnas 0..2
  const occupancy = Array.from({ length: 31 }, () => [false, false, false]); // index 0 unused

  // Orden de colocación: por startDay asc, luego por span desc (colocar primero largos para facilitar fits)
  positions.sort((a, b) => {
    if (a.startDay !== b.startDay) return a.startDay - b.startDay;
    return b.span - a.span;
  });

  const out: any[] = [];

  for (const ev of positions) {
    const colSpanDesired = desiredMap.get(ev) || 1;
    const start = ev.startDay;
    const end = ev.endDay;

    // Helper: comprueba si columnas [c .. c+colSpan-1] están libres en todos los días del evento
    const fits = (c: number, colSpan: number) => {
      if (c < 0 || c + colSpan - 1 > 2) return false;
      for (let d = start; d <= end; d++) {
        for (let cc = c; cc <= c + colSpan - 1; cc++) {
          if (occupancy[d][cc]) return false;
        }
      }
      return true;
    };

    // Intentar colocar con colSpanDesired en la primera columna posible (preferencia izquierda)
    let placed = false;
    for (let c = 0; c <= 3 - colSpanDesired; c++) {
      if (fits(c, colSpanDesired)) {
        // marcar ocupación
        for (let d = start; d <= end; d++) {
          for (let cc = c; cc <= c + colSpanDesired - 1; cc++) {
            occupancy[d][cc] = true;
          }
        }
        out.push({ ...ev, col: c, colSpan: colSpanDesired });
        placed = true;
        break;
      }
    }

    // Si no se pudo colocar con el colSpan deseado, intentar fallback:
    // - probar cambiar de posición (otras columnas) con el mismo colSpan
    // - si sigue sin entrar, reducir colSpan a 1 y buscar primera columna libre
    if (!placed) {
      // intentar colSpan menor (por ejemplo colSpanDesired -> 1)
      let fallbackPlaced = false;
      for (let spanTry = Math.min(colSpanDesired, 2); spanTry >= 1; spanTry--) {
        for (let c = 0; c <= 3 - spanTry; c++) {
          if (fits(c, spanTry)) {
            for (let d = start; d <= end; d++) {
              for (let cc = c; cc <= c + spanTry - 1; cc++) {
                occupancy[d][cc] = true;
              }
            }
            out.push({ ...ev, col: c, colSpan: spanTry });
            fallbackPlaced = true;
            break;
          }
        }
        if (fallbackPlaced) break;
      }

      // última opción: forzar colocación solapando (elegir columna 0 y marcar — esto puede superponer visualmente)
      if (!fallbackPlaced) {
        const forcedCol = 0;
        const forcedSpan = 1;
        // marcar aunque esté ocupado (solapamiento visual)
        for (let d = start; d <= end; d++) {
          occupancy[d][forcedCol] = true;
        }
        out.push({ ...ev, col: forcedCol, colSpan: forcedSpan });
      }
    }
  }

  return out;
})();
---

<Layout>

  <div class="max-w-5xl mx-auto p-4 mt-10">

    <!-- Título -->
    <h1 class="text-3xl font-bold mb-6">Calendario – Noviembre</h1>

    <div class="grid grid-cols-[60px_1fr] gap-4">

      <!-- Números del lado izquierdo -->
      <div class="flex flex-col">
        {days.map(day => (
          <div class="h-12 flex items-start text-gray-700">{day}</div>
        ))}
      </div>

      <!-- Contenedor del calendario -->
      <div class="relative border-l border-gray-300">
        
        <!-- Eventos -->
        {preparedEvents.map(ev => {
          const { startDay, span, col, colSpan, color, url, title } = ev;
          const colPercent = 100 / 3;

          return (
            <a
              href={url}
              target="_blank"
              class={`absolute ${color} rounded-xl p-3 shadow-md transition hover:scale-[1.02]`}
              style={`top: ${(startDay - 1) * 48}px;
                      height: ${span * 48}px;
                      left: ${col * colPercent}%;
                      width: ${colPercent * colSpan}%;`}
            >
              {title}
            </a>
          );
        })}
      </div>

    </div>
  </div>

</Layout>
